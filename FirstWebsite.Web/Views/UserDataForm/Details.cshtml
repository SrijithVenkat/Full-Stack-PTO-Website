@model FirstWebsite.Data.Models.User

@{
    ViewBag.Title = "Details";
}

<h2>Details of User ID - @Model.userId</h2>

<div>
    <h4> @Model.userName</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            First Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.firstName)
        </dd>

        <dt>
            Last Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.lastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Phone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ZipCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ZipCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.State)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>

        <dt>
            Hire Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.hireDate)
        </dd>


        <dt>
            Anniversary Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.anniversaryDate)
        </dd>



        <dt>
            Approver
        </dt>

        <dd>
            @Html.DisplayFor(model => model.isApprover)
        </dd>



        <dt>
            Administrator
        </dt>

        <dd>
            @Html.DisplayFor(model => model.isAdmin)
        </dd>



        <dt>
            Activity Status
        </dt>

        <dd>
            @if(Model.isActive)
            {
                @Html.Display("~ User is currently Active ~");
            }
            else
            {
                @Html.Display("~ User is currently Inactive ~");
            }
        </dd>


        <dt>
            Profile Picture
        </dt>
        <dd>
            @{
                byte[] img = Model.profilePicture;
                var base64 = Convert.ToBase64String(img);
                var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
            }
            <img src="@imgsrc" style="max-width: 100px; max-height:100px" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.userId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
